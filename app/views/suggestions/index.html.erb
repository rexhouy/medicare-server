<% if notice.present? %>
<p class="alert alert-info" id="notice"><%= notice %></p>
<% end %>

<h1 class="page-header">意见与建议</h1>

<table class="table">
  <thead>
    <tr>
      <th>建议内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.content %></td>
        <td><%= link_to '查看', suggestion %></td>
        <td><%= link_to '删除', suggestion, method: :delete, data: { confirm: '确定要删除该建议吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
